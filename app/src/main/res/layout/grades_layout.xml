<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ресурс для введення та відстеження оцінок -->
    <LinearLayout
        android:id="@+id/gradesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/examSubjectEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Назва предмету" />

        <EditText
            android:id="@+id/gradeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Отримана оцінка" />

        <Button
            android:id="@+id/addGradeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Додати оцінку" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>