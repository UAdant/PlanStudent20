<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Поля введення для додавання предметів -->
    <EditText
        android:id="@+id/editTextSubjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Назва предмету" />

    <EditText
        android:id="@+id/editTextSubjectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Час проведення предмету"
        android:padding="12dp" /> <!-- Add padding to increase touchable area -->

    <!-- Кнопка для додавання предмету -->
    <Button
        android:id="@+id/buttonAddSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Додати предмет" />

    <!-- ListView для відображення списку предметів -->
    <ListView
        android:id="@+id/listViewSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
