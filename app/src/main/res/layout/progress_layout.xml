<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ресурс для введення завдань та відстеження прогресу -->
    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/taskCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Завдання виконано" />

        <EditText
            android:id="@+id/materialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Вивчений матеріал" />

        <Button
            android:id="@+id/updateProgressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оновити прогрес" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>